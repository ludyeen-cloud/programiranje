def ispis_izbornik():
    print("----------------------")
    print("Izbornik za kalkulator")
    print("----------------------")
    print("1. Izračun napona struje")
    print("2. Izračun otpora struje")
    print("3. Izračun jakosti struje")
    print("0. Izlaz")
    print("----------------------")
def izracun_napona(jakost, otpor):
    return jakost * otpor

def izracun_otpora(napon, jakost):
    return napon / jakost

def izracun_jakosti(napon, otpor):
    return napon / otpor





while True:

    print("----------------------")
    print("Izbornik za kalkulator")
    print("----------------------")
    print("1. Izračun napona struje")
    print("2. Izračun otpora struje")
    print("3. Izračun jakosti struje")
    print("0. Izlaz")
    print("----------------------")

    try:
        ispis_izbornik()
        Opcija=int(input("Izaberite operaciju (1 / 2 / 3 / 0):"))
    except Exception as greska:
        print("Pogrešan unos: {greska}.  Molimo unesite brojeve od 1 do 3. \nOdaberite 0 za izlaz.")
        continue
    #Struktura grananja
    if Opcija == 1:     # == != < > <> >= <= - operatori usporedbe
        print("Izračun napona struje")
        try:
            jakost = int(input("Upiši jakost struje: "))
            otpor = int(input("Upiši otpor: "))
            napon = jakost*otpor
        except Exception as greska:
            print("Greška: {greska}. Molimo unesite brojeve.")
            continue

            napon = izracun_napona(jakost, otpor)
        except ValueError:
            print("Molimo uniste brojeve.")
            continue
        except ZeroDivisionError:
            print("Ne mogu dijeliti s nulom!")
            continue
        except Exception as greska:
            print("nepoznata greška: {greska}.\nMolimo pokušajte ponovno.")
            continue

        print(f"Napon struje je: {napon} V")
    elif Opcija == 2:
        print("Izračun otpora struje")
        try:
            napon = int(input("Upiši napon: "))
            jakost = int(input("Upiši jakost struje: "))
            otpor = napon/jakost
        except Exception as greska:
            print("Greška: {greska}. Molimo unesite brojeve.")
            continue

            otpor = izracun_otpora(napon, jakost)
        except ValueError:
            print("Molimo uniste brojeve.")
            continue
        except ZeroDivisionError:
            print("Ne mogu dijeliti s nulom!")
            continue
        

        print(f"Otpor je: {otpor} Ohm")
    elif Opcija == 3:
        print("Izračun jakosti struje")
        try:
            napon = int(input("Upiši napon: "))
            otpor = int(input("Upiši otpor: "))
            jakost = napon/otpor
        except Exception as greska:
            print("Greška: {greska}. Molimo unesite brojeve.")
            continue

            jakost = izracun_jakosti(napon, otpor)
        except ValueError:
            print("Molimo uniste brojeve.")
            continue
        except ZeroDivisionError:
            print("Ne mogu dijeliti s nulom!")
            continue
        except Exception as greska:
            print("nepoznata greška: {greska}.\nMolimo pokušajte ponovno.")
            continue


        print(f"Jakost struje je: {jakost} A")
    elif Opcija == 0:
        print("Hvala na korištenju kalkulatora.")
        break
    else:
        print("Pogrešan unos")
